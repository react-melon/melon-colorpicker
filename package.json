{
  "name": "melon-colorpicker",
  "version": "1.3.0",
  "description": "Melon Color Picker",
  "main": "lib/index.js",
  "scripts": {
    "start": "NODE_ENV=dev node tools/server.js",
    "build": "rimraf lib && NODE_ENV=production gulp",
    "lint": "fecs src",
    "test": "NODE_ENV=test karma start ./test/karma.local.conf.js",
    "test-ci": "NODE_ENV=test karma start ./test/karma.travis.conf.js",
    "coveralls": "cat test/coverage/lcov/lcov.info | ./node_modules/.bin/coveralls",
    "docs": "esdoc -c esdoc.json",
    "build-demo": "rimraf public && NODE_ENV=production webpack --config tools/webpack.demo.js",
    "deploy-demo": "npm run build-demo && gh-pages -d public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-melon/melon-colorpicker.git"
  },
  "keywords": [
    "react",
    "melon",
    "color",
    "picker",
    "color-picker"
  ],
  "author": "leon <ludafa@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/react-melon/melon-colorpicker/issues"
  },
  "homepage": "https://github.com/react-melon/melon-colorpicker#readme",
  "dependencies": {
    "dom-align": "^1.5.3",
    "kolor": "^1.1.9",
    "melon": ">=0.6.0-0",
    "melon-core": ">=0.5.2",
    "melon-layer": ">=1.1.0",
    "prop-types": "^15.6.0",
    "react-motion": "^0.5.2"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "babel-istanbul": "^0.11.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-es2015-modules-umd": "^6.12.0",
    "babel-plugin-transform-es3-member-expression-literals": "^6.8.0",
    "babel-plugin-transform-es3-property-literals": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.13.0",
    "babelify": "^7.3.0",
    "coveralls": "^2.11.12",
    "css-loader": "^0.24.0",
    "esdoc": "^0.4.8",
    "esdoc-es7-plugin": "0.0.3",
    "fecs": "^0.8.6",
    "file-loader": "^0.9.0",
    "gh-pages": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "html-webpack-plugin": "^2.30.1",
    "jasmine-core": "^2.8.0",
    "json-loader": "^0.5.4",
    "karma": "^1.2.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-sauce-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "nib": "^1.1.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "rimraf": "^2.6.1",
    "style-loader": "^0.13.1",
